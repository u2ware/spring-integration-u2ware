	<bean id="snmpRequest" class="io.github.u2ware.integration.snmp.inbound.SnmpRequestSupport">
		<constructor-arg>
			<value>
				127.0.0.1:10165:1.3.6,
				127.0.0.1:10166:1.3.6
			</value>
		</constructor-arg>
	</bean>


	<int-u2ware-snmp:inbound-channel-adapter id="snmpInboundChannelAdapter"
		local-port="10167"
		request-support="snmpRequest"
		channel="snmpResponse"
	>
			<int:poller fixed-rate="3000"/>
	</int-u2ware-snmp:inbound-channel-adapter>
	
	<int:channel id="snmpResponse">
		<int:queue/>
	</int:channel>

